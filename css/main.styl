body
	color #222
	font-size 18px
	line-height 1.5em

a
	color inherit
	text-decoration none

h1, h2
	font-size 1em
	line-height 1.5em

h1
	margin 0

h2
	margin 1em 0

ol, p, ul
	margin 1em 0

#wrapper
	margin 2em 1em
	max-width 33em

#header, #content
	margin 2em 0

#header

	nav

		ul
			margin 0
			padding 0

			li
				display inline
				margin-right .5em

#content

	section

		article
			margin 1em 0

			header
				margin 1em 0

				.when
					margin 0
