// import nib
@import 'nib'


// import normalize
@import 'normalize.styl'


// set color swatches
textColor = #404040
lightColor = #3498db
darkColor = #2980b9


// main styles
body
	color textColor
	font-family 'Lato', sans-serif
	font-size 16px
	line-height 1.6em

a
	color inherit
	text-decoration none
	transition color .15s ease-in

h1, h2
	color darken(textColor, 15%)

h1
	font-size 1.45em
	margin 0

h2
	font-size 1.15em
	margin 2em 0 1em

ol, p, ul
	margin 1em 0

strong
	color darken(textColor, 15%)

.content
	margin 2em auto
	max-width 33em

#header, #content
	padding 0 1em

#header
	background #202020
	overflow auto

	h1, nav
		font-size .85em
		text-transform uppercase

	h1
		color rgba(255, 255, 255, .7)
		letter-spacing .15em
		word-spacing .3em

	nav
		color rgba(255, 255, 255, .55)

		ul
			margin 0
			padding 0

			li
				display inline

				&:after
					color rgba(255, 255, 255, .25)
					content '/'
					margin 0 .45em

				&:last-child:after
					content none
					margin 0

	a

		&:hover, &:active
			color rgba(255, 255, 255, 1)

#content

	section

		article
			margin 1em 0

			header
				margin 1em 0

				h1

					a
						color inherit

				.when
					color lighten(textColor, 30%)
					font-size .7em
					margin 0
					text-transform uppercase

			footer
				background-color #eee
				color lighten(textColor, 15%)
				margin 2em 0
				overflow auto
				padding 0 1em

				p
					font-size .85em

	a
		color lightColor

		&:hover, &:active
			color darkColor


// import responsive style sheet
@import 'responsive.styl'