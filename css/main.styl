textColor = #333

body
	color textColor
	font-size 18px
	line-height 1.6em

a
	color inherit
	text-decoration none

h1, h2
	color darken(textColor, 15%)

h1
	font-size 1.45em
	margin 0

h2
	font-size 1.15em
	margin 2em 0 1em

ol, p, ul
	margin 1em 0

#header
	background-color #000
	padding 2em 1em

	h1, nav
		color #fff
		font-size .85em
		text-transform uppercase

	h1
		opacity .85

	nav
		opacity .7

		ul
			margin 0
			padding 0

			li
				display inline
				margin-right 1em

#content
	margin 2em 1em
	max-width 33em

	section

		article
			margin 1em 0

			header
				margin 1em 0

				.when
					color lighten(textColor, 30%)
					font-size .7em
					margin 0
					text-transform uppercase