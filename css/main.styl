body
	font-size 18px
	line-height 1.6em

a
	color inherit
	text-decoration none

h1
	font-size 1.45em
	margin 0

h2
	font-size 1.15em
	margin 2em 0 1em

ol, p, ul
	margin 1em 0

#header
	background-color #000
	color #fff
	padding 2em 1em

	h1
		font-weight normal
		opacity .85

	nav
		opacity .7

		ul
			margin 0
			padding 0

			li
				display inline
				margin-right 1em

#content
	margin 2em 1em
	max-width 33em

	section

		article
			margin 1em 0

			header
				margin 1em 0

				.when
					margin 0

// work this better...
#header h1, #header nav, .when
		font-size .85em
		text-transform uppercase