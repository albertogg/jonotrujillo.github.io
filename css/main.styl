// import nib
@import 'nib'


// import normalize
@import 'normalize.styl'


// set color swatches
textColor = #555
darkColor = #2980b9
lightColor = #3498db


// main styles
body
	color textColor
	font-family 'Lato', sans-serif
	font-size 16px
	line-height 1.6em

a
	color inherit
	text-decoration none
	transition color .15s ease-in

h1, h2
	color darken(textColor, 15%)

h1
	font-size 1.45em
	margin 0

h2
	font-size 1.15em
	margin 2em 0 1em

ol, p, ul
	margin 1em 0

.content
	margin 2em auto
	max-width 33em

#header, #content
	padding 0 1em

#header
	background #303030
	overflow auto

	h1, nav
		font-size .85em
		text-transform uppercase

	h1
		color rgba(255, 255, 255, .7)
		letter-spacing .15em
		word-spacing .3em

	nav
		color rgba(255, 255, 255, .55)

		ul
			margin 0
			padding 0

			li
				display inline
				margin-right .9em

				&:last-child
					margin-right 0

	a

		&:hover, &:active
			color rgba(255, 255, 255, 1)

#content

	section

		article
			margin 1em 0

			header
				margin 1em 0

				h1

					a
						color inherit
						text-decoration none

						&:hover, &:active
							color darkColor

				.when
					color lighten(textColor, 30%)
					font-size .7em
					margin 0
					text-transform uppercase

			footer
				background-color #f0f0f0
				color lighten(textColor, 15%)
				margin 2em 0
				padding 1em

				p
					font-size .85em
					margin 0

	a
		color lightColor
		text-decoration underline

		&:hover, &:active
			color darkColor

	strong
		color darken(textColor, 15%)


// import responsive style sheet
@import 'responsive.styl'